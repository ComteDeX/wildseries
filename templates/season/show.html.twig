{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <div class="container">
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row justify-content-around">
        <div class="btn btn-primary col-2 mt-2">
            <a href="{{ path('season_index') }}" class="btnlnk">back to list</a>
        </div>
        <div class="btn btn-secondary col-2 mt-2">
            <a href="{{ path('season_edit', {'id': season.id}) }}" class="btnlnk">edit</a>
        </div>
        <div>
              {{ include('season/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
