{% extends 'base.html.twig' %}
{% block title %}{{ season.program.title }}{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <h1 class="col-12 text-center">
        <a href="{{ path('wild_showByProgram', {'slug' : slug}) }}">
            {{ season.program.title }}
        </a>
    </h1>
    <h2 class="col-12 text-center">Saison n°{{ season.number }} - {{ season.year }}</h2>
    <h6 class="col-12 text-center"><a href="{{ path('wild_showByCategory', {'categoryName' : season.program.category.name } ) }}">{{ season.program.category.name }}</a></h6>
    <div class="row">
        <div class="col-2">
            <a href="{{ path('wild_showByProgram', {'slug' : slug}) }}">
                <img class="align-self-start mr-3 thumbnail" src="{{ season.program.poster}}" alt="{{ season.program.title }} poster">
            </a>
        </div>
        <div class="col-9 offset-1">
            <h3>{{ season.description }}</h3>
            {% for episode in season.episodes %}
                <div>
                    <h4>
                        <a href="{{ path('wild_showEpisode', {'slug': episode.slug}) }}">
                        S{{ season.number }}E{{ episode.number }} - {{ episode.title }}
                        </a>
                    </h4>
                    <p>{{ episode.sysnopsis }}</p>
                </div>
            {% endfor %}
            <div class="col-9">
                <a href="{{ path('wild_showByProgram', {'slug' : slug }) }}">
                    Retour à la série
                </a>
            </div>
        </div>
    </div>
    <div class="col-12 text-center">
            <a href="{{ path('wild_index') }}">
            Retour à l'accueil
        </a>
    </div>
</div>

{% endblock %}
