{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <h1 class="col-12 text-center">{{ program.title }}</h1>
    <h2 class="col-12 text-center">Saison n°{{ season.number }} - {{ season.year }}</h2>
    <h6 class="col-12 text-center"><a href="{{ path('wild_showByCategory', {'categoryName' : program.category.name } ) }}">{{ program.category.name }}</a></h6>
    <div class="row">
        <div class="col-2">
            <img class="align-self-start mr-3 thumbnail" src="{{ season.program.poster}}" alt="{{ season.program.title }} poster">
        </div>
        <div class="col-9 offset-1">
            <div class="text-center">{{ season.description }}</div>
            {% for episode in season.episodes %}
                <div>
                    <h4>S{{ season.number }}E{{ episode.number }} - {{ episode.title }}</h4>
                    <p>{{ episode.sysnopsis }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
