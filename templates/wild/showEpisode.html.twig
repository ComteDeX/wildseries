{% extends 'base.html.twig' %}
{% block title %}{{ program.title }} - S{{ season.number }}E{{ episode.number }}{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <h1 class="col-12 text-center">
        <a href="{{ path('wild_showByProgram', {'slug' : slug}) }}">
        {{ season.program.title }}
        </a>
    </h1>
    <h2 class="col-12 text-center">Saison n°{{ season.number }} - {{ season.year }} : {{ episode.number }} - {{ episode.title }}</h2>
    <h6 class="col-12 text-center"><a href="{{ path('wild_showByCategory', {'categoryName' : season.program.category.name } ) }}">{{ season.program.category.name }}</a></h6>
    <div class="row">
        <div class="col-2">
            <a href="{{ path('wild_showByProgram', {'slug' : slug}) }}">
                <img class="align-self-start mr-3 thumbnail" src="{{ season.program.poster}}" alt="{{ season.program.title }} poster">
            </a>
        </div>
        <div>
            <div class="col-9 offset-1">
                <p>{{ episode.sysnopsis }}</p>
            </div>
            <div class="row justify-content-around">
                <div>
                        <a href="{{ path('wild_showBySeason', {'id' : season.id }) }}">
                            Retour aux saisons
                        </a>
                </div>
                <div>
                        <a href="{{ path('wild_showByProgram', {'slug' : slug }) }}">
                            Retour à la série
                        </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 text-center">
        <a href="{{ path('wild_index') }}">
            Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}
