{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

<div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" height="150px">
    <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>{{ program.summary }}</p>
        <p>Categorie : <a href="{{ path('wild_showByCategory', {'categoryName' : program.category.name } ) }}">{{ program.category.name }}</a></p>
        {% for season in program.seasons %}
            <div>
                <a href="{{ path('wild_showBySeason', {'id' : season.id}) }}">
                    {{ season.number }} - {{ season.year }} - {{ season.description }}
                </a>
            </div>
        {% endfor %}
    </div>
</div>

